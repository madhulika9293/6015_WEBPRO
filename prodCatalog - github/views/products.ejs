<html>
    <head>
        <title>The Product Catalog</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link rel="stylesheet" href="/assets/styles.css" type="text/css" />
        <script src="/assets/catalog.js"></script>
    </head>
    <body>
        <h2>The Product Catalog</h2>
        <div id="prod">
            <table style="width=100%">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Image</th>
                    <th>Edit The Product</th>
                    <th>Delete The Product</th>
                </tr>
                <% for(var i=0; i<data.length; i++) { %>
                    <tr>
                    <td> <%= data[i].title %> </td>
                    <td> <%= data[i].description %> </td>
                    <td> <%= data[i].quantity %> </td>
                    <td> <img height="150" width = "100" src="/assets/<%= data[i].image %>"> </td>
                    <td> 
                        <!-- <button name ="<%= data[i].title %>">Edit</button> -->
                    <form id="<%= data[i].title %>"> <br>
                        <input type="text" name="titleOld" value="<%= data[i].title %>" required> <br> <br>
                        <input type="text" name="title" placeholder="New Title...." required> <br> <br>
                        <input type="text" name="prodesc" placeholder="Product Description...." required> <br> <br>
                        <input type="text" name="quantity" placeholder="Quantity...." required> <br> <br>
                        <button type="submit">Edit it!</button>
                    </form> </td>
                    <td> <button name ="<%= data[i].title %>">Delete</button></td>
                </tr>
                <%} %>
            </table>
        </div>
    </body>
</html>